{
    "name": "YSYX Environment",
    "initializeCommand": [
        "${localWorkspaceFolder}/.devcontainer/build.sh"
    ],
    "image": "ysyx-env",
    "containerEnv": {},
    "runArgs": [
        "--name",
        "ysyx-env",
        "--hostname",
        "YSYX-Environment"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "yzhang.markdown-all-in-one",
                "scalameta.metals",
                "scala-lang.scala",
                "aaronduino.chisel"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {
            "version": "os-provided"
        },
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "installOhMyZsh": true,
            "installOhMyZshConfig": true,
            "upgradePackages": true
        }
    }
}