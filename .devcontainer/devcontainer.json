{
    "name": "YSYX Environment",
    "initializeCommand": [
        "${localWorkspaceFolder}/.devcontainer/build.sh"
    ],
    "image": "ysyx-env",
    "containerEnv": {
        "DISPLAY": "${localEnv:DISPLAY}",
        "NVBOARD_HOME": "/workspaces/ysyx/ysyx-workbench/nvboard"
    },
    "runArgs": [
        "--name",
        "ysyx-env",
        "--hostname",
        "YSYX-Environment",
        "--net",
        "host"
    ],
    "mounts": [
        {
            "source": "/tmp/.X11-unix",
            "target": "/tmp/.X11-unix",
            "type": "bind"
        },
        {
            "source": "ysyx-home",
            "target": "/workspaces",
            "type": "volume"
        }
    ],
    "customizations": {
        "vscode": {
            "extensions": [
				"yzhang.markdown-all-in-one",
				"scalameta.metals",
				"scala-lang.scala",
				"aaronduino.chisel",
				"sterben.fpga-support"
			]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {
            "version": "os-provided"
        },
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "installOhMyZsh": true,
            "installOhMyZshConfig": true,
            "upgradePackages": true
        }
    }
}